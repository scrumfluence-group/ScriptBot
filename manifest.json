{
    "name": "Step Recorder",
    "version": "1.0",
    "description": "Build an Extension!",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage",
        "downloads"
    ],
    "background": {
        "persistent": true,
        "scripts": [
            "javascript/background.js"
        ]        
    },
    "browser_action": {
        "default_popup": "popup.html",
        "icons": {
            "16": "assets/icon16.png",
            "32": "assets/icon32.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "icons": {
        "16": "assets/icon16.png",
        "32": "assets/icon32.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    }
}